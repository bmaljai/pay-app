<div class="row">
<div class="col-lg-12">
  <%= form_tag '/debts', method: :post do %>
  <table>
  <tr>
      <td>
        <%= label_tag :name%>
      </td>
      <td>
        <%= text_field_tag :name%>
      </td>
    </tr>
    <tr>
      <td>
        <%= label_tag :email%>
      </td>
      <td>
        <%= text_field_tag :email%>
      </td>
    </tr>
    <tr>
      <td>
        <%= label_tag :amount%>
      </td>
      <td>
        <%= text_field_tag :amount%>
      </td>
    </tr>
  </table>
  <%= hidden_field_tag :invoice_id, @invoice.id %>
  <%= submit_tag "Assign Debt"%>
  <% end %>
</div>
</div>

