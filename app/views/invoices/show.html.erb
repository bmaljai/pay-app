<div class="row">
<div class="col-md-6">
<h1><%= @invoice.name %></h1>
</div>
<div class="col-md-6">
<h2><%= @invoice.amount%></h2>
</div>
</div>

<div class="row">
<div class="col-lg-12">
  <table class="table table-bordered table-hover table-striped">
  <%@invoice.debts.each do |debt|%>
  <tr>
  <td><%= debt.name %></td>
  <td><%= debt.user.email %></td>
  <td><%= debt.amount %></td>
  </tr>
  <%end%>
  </table>
</div>
</div>


<div class="row">
<div class="col-lg-12">
  <%= form_tag '/debts', method: :post do %>
  <table>
  <tr>
      <td>
        <%= label_tag :name%>
      </td>
      <td>
        <%= text_field_tag :name%>
      </td>
    </tr>
    <tr>
      <td>
        <%= label_tag :email%>
      </td>
      <td>
        <%= text_field_tag :email%>
      </td>
    </tr>
    <tr>
      <td>
        <%= label_tag :amount%>
      </td>
      <td>
        <%= text_field_tag :amount%>
      </td>
    </tr>
  </table>
  <%= hidden_field_tag :invoice_id, @invoice.id %>
  <%= submit_tag "Assign Debt"%>
  <% end %>
</div>
</div>

