<div class="row">
    <div class="col-12-lg">
      <h1 class = "page-header">Invoices</h1>
    </div>
</div>

<div class="row">
<div class="col-lg-12 container">
<%= form_tag "/invoices/#{@invoice.id}", method: :patch do %>
<div>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
</div>
<div>
  <%= label_tag :amount %>
  <%= text_field_tag :amount %>
</div>
<%= hidden_field_tag :id, @invoice.id %>
<div>
  <%= submit_tag "Update Invoice" %>
</div>
<% end %>
</div>
</div>