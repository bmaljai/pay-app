<% if current_user %>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Your Invoices</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 container">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Total Paid</th>
            <th>Others Owe</th>
            <th>Others Have Paid</th>
            <th>You Have Paid</th>
          </tr>
        </thead>
        <tbody>
          <% @invoices.each do |invoice| %>  
          <tr>
            <td>
            <a href= <%="/invoices/#{invoice.id}"%> ><%= invoice.name %></a>
            </td>
            <td><%= invoice.amount %></td>
            <td><%= invoice.others_owe %></td>
            <td><%= invoice.others_paid %></td>
            <td><%= invoice.chump_value %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% else %>

<h1>You need to log in to view invoices</h1>

<% end %>