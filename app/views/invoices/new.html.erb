<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header">Create Invoice</h3>
  </div>
</div>

<%= form_tag '/invoices', method: :post do %>
<div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name %>
</div>
<div class="form-group">
  <%= label_tag :amount %>
  <%= text_field_tag :amount %>
</div>
<div>
  <%= submit_tag "Create Invoice" %>
</div>
<% end %>