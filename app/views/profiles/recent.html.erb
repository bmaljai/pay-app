<div class="row">
<div class="col-lg-9">
<h3 class = "page-header">Recent Activity</h3>
</div>
</div>

<div class="row">
<div class="col-lg-9 container">
<div class="table-responsive">
  <table class="table table-bordered table-hover table-striped">
    <thead>
    <tr>
      <th>Description</th>
      <th>Vector</th>
      <th>Amount</th>
      <th>As of:</th>
    </tr>
    </thead>
    <tbody>
    <% @sorted_recent.each do |object| %>
    <tr>
      <td><%= object.name  %></td>
      <td><%= object.class %></td>
      <td><%= object.amount %></td>
      <td><%= object.updated_at.strftime("%m/%d/%Y") %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
</div>