      <div class="btn-group" role="group">

        <a class="btn btn-default quick-buttons" href=<%="/invoices/new"%>><i class="fa fa-fw fa-plus-square-o"></i>Create Invoice</a>
      </div>
      <div class="btn-group" role="group">
        <a class="btn btn-default quick-buttons" href=<%="/debts"%>><i class="fa fa-fw fa-usd"></i>Pay a Debt</a>  
      </div>
    </div>
</div>

<div class="row">
  <div class="col-lg-9 container">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>You Owe Others</th>
          <th>Others Owe You</th>
          <th>Your Balance</th>
        </tr>
        </thead>
        <tbody style="background-color:#e5f2ff;">
        <tr>
          <td style = "color: red;"><i class= "fa fa-sort-desc"></i><%= number_to_currency(current_user.user_debt)  %></td>
          <td style = "color: green;"><i class= "fa fa-sort-asc"></i><%= number_to_currency(current_user.user_owed) %></td>

          <%if current_user.user_balance < 0 %>
          <td style = "color: red;"><i class= "fa fa-sort-desc"></i><%= number_to_currency(current_user.user_balance) %></td>
          <%else%>
          <td style = "color: green;"><i class= "fa fa-sort-asc"></i><%= number_to_currency(current_user.user_balance) %></td>
          <%end%>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
