
 <!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Main Page <small>Debts</small>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 container">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Debts</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped">
            <thead>
              <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Paid?</th>
              </tr>
            </thead>
            <tbody>
              <% @debts.each do |debt| %>
              <tr>
                <td><%= debt.date %></td>
                <td><%= debt.name %></td>
                <td><%= debt.amount %></td>
                <td><%= debt.paid %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-right">
          <a href="#">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>
