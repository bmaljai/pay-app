<div class="row">
    <div class="col-12-lg">
      <h1 class = "page-header"><%= @debt.name %></h1>
    </div>
</div>

<div class="row">
<div class="col-lg-12 container">
<%= form_tag "/debts/#{@debt.id}", method: :patch do %>
<div>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
</div>
<div>
  <%= label_tag :amount %>
  <%= text_field_tag :amount %>
</div>
<div>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
</div>
<%= hidden_field_tag :id, @debt.id %>
<%= hidden_field_tag :invoice_edit %>
<div>
  <%= submit_tag "Update Debt" %>
</div>
<% end %>
</div>
</div>