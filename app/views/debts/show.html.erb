<div class="row">
<div class="col-lg-12">
<h1 class="page-header"><%= @debt.name.capitalize %></h1>
</div>
</div>

<div class="row">
<div class="col-lg-12 container">
<div class="table-responsive">
<table class="table table-bordered table-hover table-striped">
<thead>
   <tr>
     <th>Who you owe</th>
     <th>Debt Total Amount</th>
     <th>Amount You've Paid</th>
     <th>Amount Outstanding</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td><%= @debt.invoice.user.email %></td>
      <td><%= @debt.amount %></td>
      <td><%= @debt.paid_amount_formatted %></td>
      <td><%= @debt.outstanding_balance %></td>
    </tr>
    </tbody>
</table>
</div>
</div>
</div>

<div class="row">
<div class="col-lg-12">
<h3>Assign Debt</h3>
  <%= form_tag "/debts/#{@debt.id}", method: :patch do %>
  <table>
    <tr>
      <td>
        <%= label_tag :amount%>
      </td>
      <td>
        <%= text_field_tag :amount%>
      </td>
    </tr>
  </table>
  <%= hidden_field_tag :id, @debt.id %>
  <%= submit_tag "Pay Up"%>
  <% end %>
</div>
</div>
