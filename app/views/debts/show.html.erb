<h1><%= @debt.name %></h1>

<table class="table table-bordered table-hover table-striped">
   <tr>
     <th>Who you owe</th>
     <th>Debt Total Amount</th>
     <th>Amount You've Paid</th>
     <th>Amount Outstanding</th>
    </tr>
    <tr>
      <td><%= @debt.invoice.user.email %></td>
      <td><%= @debt.amount %></td>
      <td><%= @debt.paid_amount_formatted %></td>
      <td><%= @debt.outstanding_balance %></td>
    </tr>
</table>

<div class="row">
<div class="col-lg-12">
<h3>Assign Debt</h3>
  <%= form_tag "/debts/#{@debt.id}", method: :patch do %>
  <table>
    <tr>
      <td>
        <%= label_tag :amount%>
      </td>
      <td>
        <%= text_field_tag :amount%>
      </td>
    </tr>
  </table>
  <%= hidden_field_tag :id, @debt.id %>
  <%= submit_tag "Pay Up"%>
  <% end %>
</div>
</div>
